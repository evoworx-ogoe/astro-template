---
interface Props {
  name: string;
  class?: string;
}

const { name, class: className, ...rest } = Astro.props;

/*
  <ModalContents name="MODAL_NAME">
    <Frameset slot="content">
      ----- 内部 -----
    </Frameset>
  </ModalContents>
*/
---

<div id={`modal_${name}`} class:list={[className, 'c-modal-container']} data-modal={name} data-modal-module="container" role="dialog" aria-modal="false" inert {...rest}>
  <div class="overlay" data-modal-module="overlay"></div>
  <div class="contents">
    <slot />
  </div>
</div>

<style lang="scss">
  body.js-modal-open {
    overflow: hidden;
  }

  .c-modal-container {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
    height: 100%;
    overflow-y: scroll;
    transition-timing-function: ease;
    transition-duration: 0.4s;
    transition-property: opacity, visibility;
    will-change: opacity, visibility;

    // 表示
    // &[aria-hidden='true'] {
    &[inert] {
      visibility: hidden;
      pointer-events: none;
      opacity: 0;
    }

    // 非表示
    // &[aria-hidden='false'] {
    &:not([inert]) {
      visibility: visible;
      pointer-events: auto;
      opacity: 1;
    }

    > .overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: calc(100% - var(--scrollbar-width));
      min-height: var(--window-height);
      cursor: pointer;
      background-color: rgb(0 0 0 / 40%);
    }

    > .contents {
      position: relative;
      z-index: 1;
    }
  }
</style>
