---
interface Props {
  tabId: string;
}

const { tabId, ...rest } = Astro.props;

/*
  <TabButton tabId="TAB_ID">
    ----- 内部 -----
  </TabButton>
*/
---

<li role="presentation" {...rest}>
  <a href={`#tabpanel-${tabId}`} id={`tab-${tabId}`} class="tab" role="tab" aria-controls={`tabpanel-${tabId}`}>
    <slot />
  </a>
</li>
