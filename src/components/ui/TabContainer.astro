---
interface Props {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<div class:list={[className, 'c-tab-container']} data-tab-container {...rest}>
  <ul class="tablist" role="tablist">
    <slot name="button" />
  </ul>
  <div class="tabpanels">
    <slot name="tabpanel" />
  </div>
</div>

<style lang="scss">
  .c-tab-container {
    // 本体
    :global(.tabpanel[aria-hidden='true']) {
      display: none;
    }
  }
</style>
